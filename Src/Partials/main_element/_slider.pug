section.slider
  .container-fluid
    .row
      .col-xl-8.col-lg-8.col-md-8.col-12
        .swiper#slider-section
          .swiper-wrapper 
            .swiper-slide 
              img(loading='lazy' src="dist/Images/Slider_huge1x.png", alt="slider-img")
            .swiper-slide 
              img.right-img(loading='lazy' src="dist/Images/Slider_huge1x.png", alt="slider-img")
            .swiper-slide 
              img.right-img(loading='lazy' src="dist/Images/Slider_huge1x.png", alt="slider-img")
            .swiper-slide 
              img.right-img(loading='lazy' src="dist/Images/Slider_huge1x.png", alt="slider-img")
          .swiper-pagination 
          .swiper-button-prev
            img.left(
              src="data:image/png;base64,",
              alt="arrow-right"
            )
          .swiper-button-next
            img.right(
              src="data:image/png;base64,",
              alt="arrow-left"
            )

      .col-xl-4.col-lg-4.col-md-4.col-12
        aside.banner--left
          a.banner--left--link(href="javascript:void(0)")
            picture.banner--left--link__pic
              source(loading='lazy' 
                media="(max-width:575.98px)",
                srcset="dist/Images/Slider_small1x.png",
                type="image/png"
              )
              source(loading='lazy' 
                media="(max-width:767.98px)",
                srcset="dist/Images/Slider_small2x.png",
                type="image/png"
              )
              img#one.banner--left--link__pic__img.img-fluid(loading='lazy' 
                src="dist/Images/Slider_small3x.png",
                alt="slider-left-aside-huge-slider"
              )
          a.banner--left--link(href="javascript:void(0)")
            picture.banner--left--link__pic 
              source(loading='lazy' 
                media="(max-width:575.98px)",
                srcset="dist/Images/Slider_small1x.png",
                type="image/png"
              )
              source(loading='lazy' 
                media="(max-width:767.98px)",
                srcset="dist/Images/Slider_small2x.png",
                type="image/png"
              )
              img#two.banner--left--link__pic__img.img-fluid(loading='lazy' 
                src="dist/Images/Slider_small3x.png",
                alt="slider-left-aside-huge-slider"
              )
